@model BancoDigitalMVC.Models.Transacao

<h2>Sacar</h2>
<form asp-action="Sacar" method="post">
    <input type="hidden" name="contaId" value="@ViewBag.ContaId" />
    
    <div class="form-group">
        <label>Valor do Saque</label>
        <input name="valor" type="number" step="0.01" class="form-control" min="0.01" />
    </div>
    
    <button type="submit" class="btn btn-danger">Sacar</button>
    <a asp-action="Index" asp-controller="Cliente" class="btn btn-secondary">Cancelar</a>
</form>

<!-- Exibe mensagem de erro (se houver) -->
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}