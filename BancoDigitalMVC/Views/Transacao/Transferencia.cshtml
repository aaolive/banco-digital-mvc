@model BancoDigitalMVC.Models.Transacao

<h2>Transferir</h2>
<form asp-action="Transferir" method="post">
    <input type="hidden" name="contaOrigemId" value="@ViewBag.ContaId" />
    
    <div class="form-group">
        <label>NÃºmero da Conta Destino</label>
        <input name="contaDestinoNumero" class="form-control" required />
    </div>
    
    <div class="form-group">
        <label>Valor</label>
        <input name="valor" type="number" step="0.01" class="form-control" min="0.01" required />
    </div>
    
    <button type="submit" class="btn btn-info">Transferir</button>
    <a asp-action="Index" asp-controller="Cliente" class="btn btn-secondary">Voltar</a>
</form>

@if (ViewBag.Success != null)
{
    <div class="alert alert-success mt-3">@ViewBag.Success</div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}