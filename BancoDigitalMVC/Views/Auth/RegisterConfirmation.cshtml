@{
    ViewData["Title"] = "Cadastro Concluído";
}

<div class="confirmation-container text-center mt-5">
    <div class="card confirmation-card mx-auto" style="max-width: 500px;">
        <div class="card-body p-4">
            <!-- Ícone de sucesso -->
            <div class="mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#28a745" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                </svg>
            </div>

            <h2 class="card-title mb-3">Cadastro realizado com sucesso!</h2>
            
            <p class="card-text mb-4">
                Bem-vindo ao Banco Digital! Sua conta foi criada com sucesso.
                Agora você pode acessar sua conta ou voltar à página inicial.
            </p>

            <!-- Botões de ação -->
            <div class="d-grid gap-3">
                <a asp-controller="Auth" asp-action="Login" class="btn btn-success btn-lg">
                    <i class="bi bi-box-arrow-in-right"></i> Fazer Login
                </a>
                
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-house-door"></i> Voltar à Página Inicial
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .confirmation-card {
        border-top: 4px solid #28a745;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
</style>